#: import config utils.config

<TrainingDataTab>:
    app_root: None
    BoxLayout:
        size: root.size
        Splitter:
            size_hint: .47, 1
            sizable_from: 'right'
            strip_size: '5pt'
            UploadImageFrame:
                parent_root: root
                app_root: root.app_root

        FileChooserFrame:
            id: file_chooser
            app_root: root.app_root

<UploadImageFrame>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Image:
            size_hint: 1, 2
            id: camera_image
            allow_stretch: True
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: 1, .45
            padding: 13
            spacing: 13
            Label:
                text: "Category:"
            Button:
                # text: config.get_config('categories')[0].capitalize()
                on_press: root.is_selected_first_category = True
                background_color: (.6, .6, 1, 1) if root.is_selected_first_category else (1, 1, 1, 1)
                IconImage:
                    source: 'icons/house.png'
            Button:
                # text: config.get_config('categories')[1].capitalize()
                on_press: root.is_selected_first_category = False
                background_color: (.6, .6, 1, 1) if not root.is_selected_first_category else (1, 1, 1, 1)
                IconImage:
                    source: 'icons/tree.png'
        Button:
            size_hint: 1, .5
            id: capture_button
            # text: 'Take picture'
            on_release: root.capture_image()
            disabled: not root.is_capturing
            IconImage:
                source: 'icons/camera.png'
        BoxLayout:
            size_hint: 1, .5
            Button:
                id: retake_button
                # text: 'Retake'
                disabled: root.is_capturing
                on_release: root.retake_image()
                IconImage:
                    source: 'icons/undo.png'
            Button:
                id: save_button
                # text: 'Save'
                disabled: root.is_capturing
                on_release: root.save_image()
                IconImage:
                    source: 'icons/save.png'

<FileChooserFrame>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        Image:
            canvas.before:
                Color:
                    rgba: (.5, .5, .5, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: file_image
            color: 'grey'
            allow_stretch: True
            keep_ratio: True
            source: ''
        FileChooserIconView:
            id: file_chooser
            dirselect: False
            filters: ['*.png']
            rootpath: '../datasets'

    ToggleButton:
        size_hint: None, None
        size: 100, 100
        pos: root.ids.file_image.x + root.ids.file_image.width - self.width - 25, root.ids.file_image.y + root.ids.file_image.height - self.height - 25
        state: 'down'
        on_release: root.app_root.state['show_transformations'] = self.state == 'down'
        IconImage:
            source: 'icons/preview.png'
    Button:
        id: delete_image_button
        size_hint: None, None
        size: 100, 100
        pos: root.ids.file_image.x + root.ids.file_image.width - self.width - 25, root.ids.file_image.y + 25
        # text: 'Delete'
        disabled: True
        on_release: root.delete_selected_image()
        IconImage:
            source: 'icons/delete.png'
