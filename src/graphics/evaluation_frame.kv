<EvaluationsTab>:
    app_root: None
    
    BoxLayout:
        size: root.size
        orientation: 'vertical'

        EvaluationsHeaderRow:
        HorizontalSeparator:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: evaluation_results
                cols: 1
                size_hint: 1, None
                height: 0

    Button:
        size_hint: None, None
        size: 130, 130
        pos: root.x + root.width - self.width - 30, root.y + 30
        on_release: root.new_evaluation()
        IconImage:
            source: 'icons/new.png'

<EvaluationsHeaderRow@Widget>:
    size_hint: 1, None
    height: 100
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        Label:
            text: 'Eval #'
            bold: True
        Label:
            text: 'Samples'
            bold: True
        Label:
            text: 'Active Upgrades'
            bold: True
        Label:
            text: 'Training Accuracy'
            bold: True

<EvaluationRow>:
    app_root: None
    loading: True
    model_index: None
    initialized: False
    size_hint: 1, None
    height: 70
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        Label:
            text: str(root.model_index + 1) if root.initialized else ""
        Label:
            text: root.app_root.state['evaluations'][root.model_index]['samples'] if not root.loading else ""
        Label:
            text: root.get_active_upgrades() if root.initialized and not root.loading else ""
        Label:
            text: "In progress..." if root.loading else root.get_accuracy()
