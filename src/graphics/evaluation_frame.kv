<EvaluationsTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, None
            height: 130
            padding: 15, 15
            spacing: 100
            orientation: 'horizontal'
            Label:
                text: 'Evaluations'
                bold: True
            Button:
                on_release: root.new_evaluation()
                IconImage:
                    source: 'icons/new.png'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: evaluation_results
                cols: 1
                size_hint: 1, None
                height: 0

<EvaluationRow>:
    app_root: None
    loading: True
    model_index: None
    initialized: False
    size_hint: 1, None
    height: 70
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        Label:
            text: "" if not root.initialized else "Evaluation " + str(root.model_index + 1) if root.loading else "Evaluation " + str(root.model_index + 1) + " (" + root.app_root.state['evaluations'][root.model_index]['samples'] + " images"  + ")"
        Label:
            text: "Active upgrades: " + root.get_active_upgrades() if root.initialized and not root.loading else ""
        Label:
            text: "In progress..." if root.loading else "Accuracy: " + root.get_accuracy()
