<TrainYourModelGame>:
    TabbedPanel:
        size: root.size
        do_default_tab: False

        TabbedPanelItem:
            text: 'Training Data'
            TrainingDataTab:
                app_root: root
        TabbedPanelItem:
            text: 'Evaluations'
            EvaluationsTab:
                app_root: root
        TabbedPanelItem:
            text: 'Upgrades'
            UpgradesTab:
                app_root: root

<TrainingDataTab>:
    app_root: None
    BoxLayout:
        size: root.size
        Splitter:
            size_hint: .3, 1
            sizable_from: 'right'
            strip_size: '5pt'
            UploadImageFrame:
                parent_root: root
                app_root: root.app_root

        BoxLayout:
            id: image_frame
            orientation: 'vertical'
            RelativeLayout:
                Image:
                    canvas.before:
                        Color:
                            rgba: (.5, .5, .5, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: file_image
                    color: 'grey'
                    allow_stretch: True
                    keep_ratio: True
                    source: ''
                Button:
                    id: delete_image_button
                    pos_hint: {'bottom': 1, 'right': 1}
                    size_hint: None, None
                    size: 100, 100
                    text: 'Delete'
                    disabled: True
                    on_release: root.delete_selected_image()
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: None, None
                    size: 470, 100
                    pos_hint: {'top': 1, 'right': 1}
                    Label:
                        text: 'Show tranformations'
                    Switch:
                        id: show_transformations_switch
            FileChooserIconView:
                id: file_chooser
                dirselect: False
                filters: ['*.png']
                rootpath: '../datasets'
                on_selection: root.show_selected_image()

<UploadImageFrame>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label: 
            text: 'Upload new photo'
            bold: True
            size_hint_y: .3 
        Image:
            id: camera_image
            allow_stretch: True
        BoxLayout:
            size_hint_y: .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: root.is_selected_first_category
                disabled: root.is_selected_first_category
                on_press: root.is_selected_first_category = True
                
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 1
                    Rectangle:
                        # self here refers to the widget i.e FloatLayout
                        pos: self.pos
                        size: self.size
            Label:
                text: 'House'
        BoxLayout:
            size_hint: 1, .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: not root.is_selected_first_category
                disabled: not root.is_selected_first_category
                on_press: root.is_selected_first_category = False
            Label:
                text: 'Animal'
        Button:
            id: capture_button
            text: 'Take picture'
            on_release: root.capture_image()
            disabled: not root.is_capturing
        BoxLayout:
            Button:
                id: retake_button
                text: 'Retake'
                disabled: root.is_capturing
                on_release: root.retake_image()
            Button:
                id: save_button
                text: 'Save'
                disabled: root.is_capturing
                on_release: root.save_image()

<EvaluationsTab>:
    app_root: None
    ScrollView:
        size: root.size
        do_scroll_x: False
        do_scroll_y: True
        Label:
            size_hint: 1, None
            height: self.texture_size[1]
            text: 'really some amazing text\n' * 100

<UpgradesTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Permanent Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "resize"
                label_text: "Resize to 32x32"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "grayscale"
                label_text: "Grayscale"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "contrast"
                label_text: "Max Contrast"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "image_generation"
                label_text: "Image Generation"
            Label:
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "One Time Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            OneTimeUpgrade:
                label_text: "Train data to Test dataset"
            OneTimeUpgrade:
                label_text: "Test data to Train dataset"
            OneTimeUpgrade:
                label_text: "Sabotage"
            Label:
        VerticalSeparator:
                


<PurchasableUpgrade>:
    label_text: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        id: purchase_row
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 50, 5
        Switch:
            id: active_switch
            size_hint: None, 1
            width: 250
            pos_hint: {'center_x': .5, 'center_y': .5}
            disabled: not root.is_purchased
            on_touch_up: root.update_active_state()
        Label:
            text: root.label_text
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            text: "Buy"
            on_release: root.purchase()

<OneTimeUpgrade>:
    label_text: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 50, 5
        Label:
            text: root.label_text
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            text: "Buy"

<VerticalSeparator@Widget>:
    size_hint: None, 1
    width: 10
    canvas.before:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            size: self.size
            pos: self.pos
