#: include graphics/icon_image.kv
#: include graphics/separators.kv

<TrainYourModelGame>:
    FloatLayout:
        size: root.size

        TabbedPanel:
            size: root.size
            do_default_tab: False

            TrainingDataTab:
                id: training_tab
                app_root: root
            EvaluationsTab:
                id: evaluations_tab
                app_root: root
            UpgradesTab:
                id: upgrades_tab
                app_root: root

            TabbedPanelHeader:
                id: tab_header
                content: training_tab.__self__
                IconImage:
                    source: 'icons/photo_library.png'
            TabbedPanelHeader:
                content: evaluations_tab.__self__
                IconImage:
                    source: 'icons/evaluations.png'
            TabbedPanelHeader:
                content: upgrades_tab.__self__
                IconImage:
                    source: 'icons/upgrades.png'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: root.ids.tab_header.width, root.ids.tab_header.height * 0.8
            pos: root.width - self.width * 1.05, root.height - self.height * 1.25
            IconImage:
                source: 'icons/coin.png'
            Label:
                id: coins_label
                text: str(root.state['coins'])
                bold: True
                font_size: 36
