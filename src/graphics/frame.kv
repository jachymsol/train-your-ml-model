#: include graphics/icon_image.kv
#: include graphics/separators.kv

<TrainYourModelGame>:
    FloatLayout:
        size: root.size

        TabbedPanel:
            size: root.size
            do_default_tab: False

            TrainingDataTab:
                id: training_tab
                app_root: root
            EvaluationsTab:
                id: evaluations_tab
                app_root: root
            UpgradesTab:
                id: upgrades_tab
                app_root: root

            TabbedPanelHeader:
                content: training_tab.__self__
                IconImage:
                    source: 'icons/photo_library.png'
            TabbedPanelHeader:
                content: evaluations_tab.__self__
                IconImage:
                    source: 'icons/evaluations.png'
            TabbedPanelHeader:
                content: upgrades_tab.__self__
                IconImage:
                    source: 'icons/upgrades.png'
        
        Label:
            id: coins_label
            text: 'Coins: ' + str(root.state['coins'])
            halign: 'right'
            size_hint: None, None
            size: (200, 90)
            pos_hint: {'right': 1, 'top': 1}
