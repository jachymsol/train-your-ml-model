<TrainYourModelGame>:
    TabbedPanel:
        size: root.size
        do_default_tab: False

        TabbedPanelItem:
            text: 'Training Data'
            TrainingDataTab:
        TabbedPanelItem:
            text: 'Evaluations'
            BoxLayout:
                Label:
                    text: 'Second tab content area'
                Button:
                    text: 'Button that does nothing'
        TabbedPanelItem:
            text: 'Upgrades'
            RstDocument:
                text:
                    '\\n'.join(("Hello world", "-----------",
                    "You are in the third tab."))

<TrainingDataTab>:
    BoxLayout:
        size: root.size
        Splitter: 
            size_hint: .3, 1
            sizable_from: 'right'
            strip_size: '5pt'
            UploadPictureFrame:

        BoxLayout:
            orientation: 'vertical'
            Image:
                id: file_image
                stretch_image: True
                keep_ratio: True
                source: ''
            FileChooserIconView:
                id: file_chooser
                dirselect: False
                filters: ['*.png']
                rootpath: '../datasets'
                on_selection: root.show_selected_file()

<UploadPictureFrame>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label: 
            text: 'Upload new photo'
            bold: True
            size_hint_y: .3 
        Image:
            id: camera_image
        BoxLayout:
            size_hint_y: .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: root.is_selected_first_category
                disabled: root.is_selected_first_category
                on_press: root.is_selected_first_category = True
                
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 1
                    Rectangle:
                        # self here refers to the widget i.e FloatLayout
                        pos: self.pos
                        size: self.size
            Label:
                text: 'Airplane'
        BoxLayout:
            size_hint: 1, .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: not root.is_selected_first_category
                disabled: not root.is_selected_first_category
                on_press: root.is_selected_first_category = False
            Label:
                text: 'Basketball'
        Button:
            id: capture_button
            text: 'Take picture'
            on_release: root.capture_image()
            disabled: not root.is_capturing
        BoxLayout:
            Button:
                id: retake_button
                text: 'Retake'
                disabled: root.is_capturing
                on_release: root.retake_image()
            Button:
                id: save_button
                text: 'Save'
                disabled: root.is_capturing
                on_release: root.save_image()
