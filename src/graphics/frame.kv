<TrainYourModelGame>:
    TabbedPanel:
        size: root.size
        do_default_tab: False

        TabbedPanelItem:
            text: 'Training Data'
            TrainingDataTab:
                app_root: root
        TabbedPanelItem:
            text: 'Evaluations'
            EvaluationsTab:
                app_root: root
        TabbedPanelItem:
            text: 'Upgrades'
            UpgradesTab:
                app_root: root

<TrainingDataTab>:
    app_root: None
    BoxLayout:
        size: root.size
        Splitter:
            size_hint: .47, 1
            sizable_from: 'right'
            strip_size: '5pt'
            UploadImageFrame:
                parent_root: root
                app_root: root.app_root

        FileChooserFrame:
            app_root: root.app_root

<UploadImageFrame>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        Label: 
            text: 'Upload new photo'
            bold: True
            size_hint: 1, .5
        Image:
            size_hint: 1, 2
            id: camera_image
            allow_stretch: True
        BoxLayout:
            size_hint: 1, .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: root.is_selected_first_category
                disabled: root.is_selected_first_category
                on_press: root.is_selected_first_category = True
                
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Rectangle:
                        # self here refers to the widget i.e FloatLayout
                        pos: self.pos
                        size: self.size
            Label:
                text: 'House'
        BoxLayout:
            size_hint: 1, .5
            CheckBox:
                group: 'categories'
                pos_hint: {'center_x': .9}
                active: not root.is_selected_first_category
                disabled: not root.is_selected_first_category
                on_press: root.is_selected_first_category = False
            Label:
                text: 'Animal'
        Button:
            size_hint: 1, .5
            id: capture_button
            text: 'Take picture'
            on_release: root.capture_image()
            disabled: not root.is_capturing
        BoxLayout:
            size_hint: 1, .5
            Button:
                id: retake_button
                text: 'Retake'
                disabled: root.is_capturing
                on_release: root.retake_image()
            Button:
                id: save_button
                text: 'Save'
                disabled: root.is_capturing
                on_release: root.save_image()

<FileChooserFrame>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        RelativeLayout:
            Image:
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                id: file_image
                color: 'grey'
                allow_stretch: True
                keep_ratio: True
                source: ''
            Button:
                id: delete_image_button
                pos_hint: {'bottom': 1, 'right': 1}
                size_hint: None, None
                size: 100, 100
                text: 'Delete'
                disabled: True
                on_release: root.delete_selected_image()
            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: 470, 100
                pos_hint: {'top': 1, 'right': 1}
                Label:
                    text: 'Show tranformations'
                Switch:
                    id: show_transformations_switch
        FileChooserIconView:
            id: file_chooser
            dirselect: False
            filters: ['*.png']
            rootpath: '../datasets'

<EvaluationsTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, None
            height: 130
            padding: 15, 15
            spacing: 100
            orientation: 'horizontal'
            Label:
                text: 'Evaluations'
                bold: True
            Button:
                text: 'New evaluation'
                on_release: root.new_evaluation()

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: evaluation_results
                cols: 1
                size_hint: 1, None
                height: 0

<EvaluationRow>:
    app_root: None
    model_index: None
    initialized: False
    size_hint: 1, None
    height: 70
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'horizontal'
        Label:
            text: "Evaluation " + str(root.model_index + 1) + " (" + root.app_root.state['evaluations'][root.model_index]['samples'] + " images"  + ")" if root.initialized else ""
        Label:
            text: "Active upgrades: " + root.get_active_upgrades() if root.initialized else ""
        Label:
            text: "Accuracy: " + root.get_accuracy() if root.initialized else ""

<UpgradesTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Permanent Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "resize"
                label_text: "Resize to 32x32"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "grayscale"
                label_text: "Grayscale"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "contrast"
                label_text: "Max Contrast"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "image_generation"
                label_text: "Image Generation"
            PurchasableUpgrade:
                app_root: root.app_root
                upgrade_id: "train_test_split"
                label_text: "Train/Test split"
            Label:
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "One Time Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            OneTimeUpgrade:
                label_text: "Evaluate a model on the Test dataset"
            OneTimeUpgrade:
                label_text: "Train data to Test dataset"
            OneTimeUpgrade:
                label_text: "Test data to Train dataset"
            OneTimeUpgrade:
                label_text: "Sabotage"
            Label:
        VerticalSeparator:
                


<PurchasableUpgrade>:
    label_text: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        id: purchase_row
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 50, 5
        Switch:
            id: active_switch
            size_hint: None, 1
            width: 250
            pos_hint: {'center_x': .5, 'center_y': .5}
            disabled: not root.is_purchased
            on_touch_up: root.update_active_state()
        Label:
            text: root.label_text
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            text: "Buy"
            on_release: root.purchase()

<OneTimeUpgrade>:
    label_text: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 50, 5
        Label:
            text: root.label_text
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            text: "Buy"

<VerticalSeparator@Widget>:
    size_hint: None, 1
    width: 10
    canvas.before:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            size: self.size
            pos: self.pos
