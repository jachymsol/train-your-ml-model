<UpgradesTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        VerticalSeparator:
        BoxLayout:
            id: permanent_upgrades
            orientation: 'vertical'
            Label:
                text: "Permanent Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "One Time Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            OneTimeUpgrade:
                display_name: "Evaluate a model on the Test dataset"
            OneTimeUpgrade:
                display_name: "Train data to Test dataset"
            OneTimeUpgrade:
                display_name: "Test data to Train dataset"
            OneTimeUpgrade:
                display_name: "Hint"
            Label:
        VerticalSeparator:
                
<PurchasableUpgrade>:
    display_name: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        id: purchase_row
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 20, 5, 50, 5
        Switch:
            id: active_switch
            size_hint: None, 1
            width: 250
            pos_hint: {'center_x': .5, 'center_y': .5}
            disabled: not root.is_purchased
            on_touch_up: root.update_active_state()
        Label:
            text: root.display_name
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            on_release: root.purchase()
            IconImage:
                source: 'icons/coin.png'

<OneTimeUpgrade>:
    display_name: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: 50, 5
        Label:
            text: root.display_name
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            size_hint: None, 1
            width: 200
            IconImage:
                source: 'icons/coin.png'
