<UpgradesTab>:
    app_root: None
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        VerticalSeparator:
        BoxLayout:
            id: permanent_upgrades
            orientation: 'vertical'
            Label:
                text: "Permanent Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
        VerticalSeparator:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "One Time Upgrades"
                bold: True
                size_hint: 1, None
                height: 150
            OneTimeUpgrade:
                display_name: "Train data to Test dataset"
            OneTimeUpgrade:
                display_name: "Test data to Train dataset"
            OneTimeUpgrade:
                display_name: "Hint"
            Label:
        VerticalSeparator:
                
<PurchasableUpgrade>:
    display_name: ""
    abbreviation: ""
    cost: 0
    size_hint: 1, None
    height: 100
    BoxLayout:
        id: purchase_row
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: self.width * 0.05, 5
        spacing: self.width * 0.05
        ToggleButton:
            id: active_switch
            pos_hint: {'center_x': .5, 'center_y': .5}
            disabled: not root.is_purchased
            on_release: root.update_active_state()
            IconImage:
                source: 'icons/toggle_on.png' if self.parent.state == 'down' else 'icons/toggle_off.png'
        Label:
            size_hint: 3, 1
            text: f"({root.abbreviation}) {root.display_name}"
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            on_release: root.purchase()
            BoxLayout:
                orientation: 'horizontal'
                size: self.parent.size
                pos: self.parent.pos
                Label:
                    text: str(root.cost)
                    text_size: self.size
                    valign: 'center'
                    halign: 'right'
                Widget:
                    IconImage:
                        source: 'icons/coin.png'

<OneTimeUpgrade>:
    display_name: ""
    size_hint: 1, None
    height: 100
    BoxLayout:
        width: root.width
        pos: root.pos
        orientation: 'horizontal'
        padding: self.width * 0.05, 5
        spacing: self.width * 0.05
        Label:
            size_hint: 4, 1
            text: root.display_name
            text_size: self.size
            halign: 'left'
            valign: 'center'
        Button:
            id: purchase_button
            IconImage:
                source: 'icons/coin.png'
